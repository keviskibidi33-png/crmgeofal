# Configuración de jsreport para producción
# Copia este archivo como .env y ajusta los valores según tu entorno

# Configuración de jsreport
JSREPORT_URL=http://localhost:5488
JSREPORT_TIMEOUT=30000
JSREPORT_RETRY_ATTEMPTS=3
JSREPORT_RETRY_DELAY=1000

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crmgeofal
DB_USER=postgres
DB_PASSWORD=password

# Configuración del servidor
PORT=4000
NODE_ENV=production

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRE=7d
